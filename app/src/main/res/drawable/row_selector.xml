<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_enabled="true">
            <shape>
                <solid android:color="@color/colorTextBackground1"/>
                <size android:width="600dp" />
                <corners android:radius="10dp"/>
                <gradient android:centerColor="@color/colorTextBackground1"
                    android:endColor="#edf8f5"
                    android:startColor="#f5f8ed"
                    android:angle="45"/>
                <stroke android:color="#e6e6e6" android:width="2dp"/>
            </shape>
        </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#e6e6e6"/>
            <size android:width="600dp" />
            <corners android:radius="10dp"/>
            <stroke android:color="#e6e6e6" android:width="2dp"/>
        </shape>
    </item>

</selector>